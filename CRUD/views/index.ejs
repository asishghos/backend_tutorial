<body class="bg-gray-900 text-white flex flex-col items-center p-6">
    <h1>Login Page</h1>
    <div class="w-full max-w-md">
        <form action="/create" method="post" class="bg-gray-800 p-6 rounded">
            <input type="text" placeholder="username" class="w-full p-3 mb-2 bg-gray-700 text-white rounded" name="username" required>
            <input type="text" placeholder="email" class="w-full p-3 mb-2 bg-gray-700 text-white rounded" name="email" required>
            <button class="bg-blue-500 px-6 py-2 text-white rounded hover:bg-blue-600 w-full" type="submit">Login</button>
        </form>
        <a href="/read" class="text-blue-500 hover:underline mt-4">Click to know the Users</a>
    </div>
